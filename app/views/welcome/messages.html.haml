.container
  .row
    .col-md-12.text-center
      %h2 Mensagens
      = image_tag "div.jpg"
  .row
    .col-md-12
      = link_to "#" do
        %a.link.active
          Todos
        %span.badge 27
      = link_to "#" do
        %a.link
          Usuários
        %span.badge 101
      = link_to "#" do
        %a.link
          Sistema
        %span.badge 0
  .row
    .col-md-12
      .messages
        .inner.pull-left
          .info
            = image_tag "avatar.jpg", class: "pull-left img-responsive avatar"
